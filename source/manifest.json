{
	"name": "Hide Youtube Spoilers",
	"version": "0.0.1",
	"description": "An awesome new browser extension",
	"homepage_url": "https://github.com/fregante/browser-extension-template",
	"manifest_version": 3,
	"minimum_chrome_version": "100",
	"browser_specific_settings": {
		"gecko": {
			"id": "awesome-extension@notlmn.github.io",
			"strict_min_version": "100.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://*.youtube.com/*"
	],
	"content_scripts": [
		{
			"matches": [ "https://*.youtube.com/watch?*" ],
			"js": [ "watch_page.ts" , "list_page.ts"],
			"run_at": "document_idle"
		},
		{
			"matches": [ "https://*.youtube.com/*" ],
			"js": [ "list_page.ts" ],
			"run_at": "document_idle"
		}
	],
	"options_ui": {
		"browser_style": true,
		"page": "options.html"
	}
}
